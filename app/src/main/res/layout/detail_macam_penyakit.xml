<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LightTheme.Background"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambardemam"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/picture1" />

    <TextView
        android:id="@+id/namademam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Demam"
        android:layout_margin="10dp"
        android:padding="9dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/dongker"
        android:background="@color/tosca2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_view1">

            <TextView
                android:id="@+id/gejala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gejala Demam" />

            <TextView
                android:id="@+id/pengobatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengobatan Demam" />

            <TextView
                android:id="@+id/pencegahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cara Pencegahan Demam" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>